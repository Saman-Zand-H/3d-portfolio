{
  "ruff.format.args": ["--line-length=120"],
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[html]": {
    "editor.formatOnSave": false
  },
  "python.analysis.indexing": true,
  "python.languageServer": "Pylance",
  "isort.args": ["--multi-line=3", "--trailing-comma", "--force-grid-wrap=0", "--use-parentheses", "--line-width=120"],
  "black-formatter.args": ["--line-length=120"],
  "[html][django-html]": {
    "editor.defaultFormatter": "monosans.djlint"
  },
  "emmet.includeLanguages": {
    "django-html": "html"
  },
  "djlint.customBlocks": ["escapescript"],
  "djlint.ignore": ["H021", "H037", "H006", "H013"],
  "djlint.formatCss": true,
  "djlint.formatJs": true,
  "djlint.enableLinting": false,
  "[css]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "files.associations": {
    "*.html": "html"
  }
}
